<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp"
    android:layout_marginRight="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/product_name_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Product Name"
            android:textSize="20sp"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/product_image_view_id"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/product_name_tv_id"
             />

        <TextView
            android:id="@+id/product_price_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/product_image_view_id"
            android:text="Product description"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/product_description_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/product_price_tv_id"
            android:text="Product description"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>